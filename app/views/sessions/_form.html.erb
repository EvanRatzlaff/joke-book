<h2>
<% if flash[:alert].present? %>
<%= flash[:alert] %>
<%end%>
</h2>

<%= form_for user, url: session_form_path, method: "POST" do |f| %>

    <div class="input-field">
    <%= f.label :email %>
    <%= f.text_field :email %>
    </div>
    <br>
    <div class="input-field">
    <%= f.label :username %>
    <%= f.text_field :username %>
    </div>
    <br>
    <div class="input-field">
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
    <br>
    <%= f.submit button_name, class: "btn" %>
    <% end %>
